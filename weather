#!/usr/bin/env php

<?php
require __DIR__.'/vendor/autoload.php';

use Shobi\Weatherapp\Weatherapp;

$app = new Weatherapp();

try {
    $weather = $app->current($argv[1] ?? null);
} catch(Exception $e) {
    die("Uh oh... The location " . $argv[1] . " doesn't seems to be present in our database");
}

die($weather);
